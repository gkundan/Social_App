<link rel="stylesheet" href="/css/signForm.css" />

<div id="signin-form"">
<div class="signIn-div">
  <h1>Forget Password!</h1>
  <form action="/forget-password/reset-password" method="post">
    <div>
        <p>Fill Your Mail to get reset link.</p>
      <input type="password" name="password" placeholder=" Your New Password "required />
      <br>
      <input type="hidden" name="user_id" value="<%= user_id %>">
    </div>

    <div>
      <button id="button" type="submit">Reset Password</button>
    </div>
  </form>
</div>
</div>