<h1><%=title %></h1>

<section id="feed-post">
    <div class="post-form-div">
        <h3>Posts Here !</h3>
        <% if(locals.user) {%>
        <form action="/posts/create" id="new-post-form" method="post">
            <textarea name="content" id="" cols="30" rows="5" placeholder="Enter Your Thought.."></textarea>
            <br />
            <button type="submit">Post</button>
        </form>
        <% } %>
    </div>
    <!-- //post show div  -->
    <div class="post-box">
        <ul>
            <% for (post of posts) { %>
            <%- include('_post')-%>
            <% } %>
        </ul>
    </div>
</section>

<!-- //user lists as friends  -->
<section id="user-friends">
    <h4>Friends</h4>
    <% for (u of all_user){ %>
    <p>
        <a href="/users/profile/<%= u.id %>"></a>
    </p>
    <%}%>
</section>