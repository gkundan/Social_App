<h1>
    <%=title %>
</h1>

<section id="feed-post">
    <div class="post-form-div">

        <h3>Posts Here !</h3>
        <% if(locals.user) {%>
        <form action="/posts/create" id="new-post-form" method="post">
            <textarea name="content" id="" cols="30" rows="5" placeholder="Enter Your Thought.."></textarea>
            <br>
            <button type="submit">Post</button>
        </form>
        <% } %>
    </div>
    <!-- //post show div  -->
    <div class="post-box">
        <ul>
            <% for (post of posts) { %>
            <li>

                <p>
                    <%= post.content %>
                    <br>
                    <small><%=post.user.name %></small>
                </p>
            </li>
            <% } %>
        </ul>
    </div>

</section>